{
    "openapi": "3.0.0",
    "info": {
        "version": "0.0.1",
        "title": "SpringForum"
    },
    "servers": [
        {
            "url": "http://localhost/",
            "description": "Development server",
            "variables": {
                "port": {
                    "enum": [
                        "8008",
                        "8080"
                    ],
                    "default": "8080"
                }
            }
        }
    ],
    "paths": {
        "/post": {
            "get": {
                "summary": "Get a specific post",
                "operationId": "getPost",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "ID of the post",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The requested post",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "300": {
                        "description": "Unauthorized to view post"
                    },
                    "404": {
                        "description": "Post not found"
                    },
                    "500": {
                        "description": "Server error"
                    },
                    "default": {
                        "description": "Unspecified error"
                    }
                }
            },
            "post": {
                "summary": "Create a new post",
                "operationId": "createPost",
                "parameters": [
                    {
                        "name": "post",
                        "in": "query",
                        "description": "Post to create",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/Post"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The created posts id",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "integer",
                                    "format": "int64"
                                }
                            }
                        }
                    },
                    "300": {
                        "description": "Unauthorized to view post"
                    },
                    "404": {
                        "description": "Post not found"
                    },
                    "500": {
                        "description": "Server error"
                    },
                    "default": {
                        "description": "Unspecified error"
                    }
                }
            }
        },
        "/board": {
            "post": {
                "summary": "List all posts on a Board",
                "operationId": "listAllPostsOnBoard",
                "parameters": [
                    {
                        "name": "id",
                        "in": "query",
                        "description": "ID of the board",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of posts on the requested board",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PostArray"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Board not found"
                    },
                    "default": {
                        "description": "Unspecified error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "PostArray": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Post"
                }
            },
            "Post": {
                "type": "object",
                "required": [
                    "id",
                    "author"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "minimum": 0
                    },
                    "author": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "body": {
                        "type": "string"
                    }
                }
            }
        }
    }
}